<%-include('./inc/header');%>
<style>
    .form-control{
        color: #000;
    }
</style>
<div class="row" id="bill">
  <div class="col-md-10 ml-auto mr-auto">
    <div class="card shadow" >
      <div class="card-header bg-transparent border-0">
        <div class="row bg-default" style="justify-content: center;">
            <h1 class="text-white mb-0">Invoice</h1>
        </div>
      </div>
      <div class="card-body">
        <div class="row">
            <div class="col-3">
                <textarea class="form-control" name="address" id="address" cols="30" rows="4" style="overflow:hidden;background: #d2e2fd;color: black;">
Jonathan Neal
101 E. Chapman Ave
Orange, CA 92866
(800) 555-1234
                </textarea>
            </div>
            <div class="col-9"></div>
        </div>
        <div class="row" style="margin-top: 20px;">
            <div class="col-8">
                <h1 style="padding: 20px;">Mondar</h1>
            </div>
            <div class="col-4">
                <table>
                    <tbody>
                        <tr>
                            <td><input type="text" class="form-control" value="Date" style="background: #9d9fa059;" /></td>
                            <td><input type="text" class="form-control" value="<%=today%>" /></td>
                        </tr>
                        <tr>
                            <td><input type="text" class="form-control" value="Amount($)" style="background: #9d9fa059;" /></td>
                            <td><input type="text" class="form-control" value="<%=price%>" /></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row" style="margin-top: 20px;">
            <div class="col-12">
                <table>
                    <thead>
                        <tr>
                            <th class="text-center">From</th>
                            <th class="text-center">To</th>
                            <th class="text-center">Passenger(s)</th>
                            <th class="text-center">Price</th>
                            <th class="text-center">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% let tot=0 %>
                        <tr>
                            <td><input type="text" value="<%=search[0]%>" class="form-control"  /></td>
                            <td><input type="text" value="<%=search[1]%>" class="form-control" /></td>
                            <td><input type="text" value="<%=travellers%>" class="form-control" /></td>
                            <td><input type="text" value="<%=price%>" class="form-control" /></td>
                            <td><input type="text" value="<%=travellers*price%>" class="form-control" /></td>
                            <%tot+=travellers*price%>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        
        <div class="row" style="margin-top: 20px;">
            <div class="col-7"></div>
            <div class="col-5">
                <table>
                    <tbody>
                        <tr>
                            <td><input type="text" value="Total($)" class="form-control" style="background: #9d9fa059;" /></td>
                            <td><input type="text" value="<%=tot%>" class="form-control" /></td>
                        </tr>
                        <tr>
                            <td><input type="text" value="Tax($)" class="form-control" style="background: #9d9fa059;" /></td>
                            <td><input type="text" value="0.00" class="form-control" /></td>
                        </tr>
                        <tr>
                            <td><input type="text" value="Grand Total($)" class="form-control" style="background: #9d9fa059;" /></td>
                            <td><input type="text" value="<%=tot%>" class="form-control" /></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <aside>
			<h4 class="text-center">
                <input type="text"  value="Additional Notes" style="border: none;" />
            </h4>
            <hr style="margin-bottom: 0;margin-top: 0;    border-top: 1px solid #000;">
			<div class="row">
                <input type="text" class="form-control" value="A finance charge of 1.5% will be made on unpaid balances after 30 days." style="border: none;" />
			</div>
		</aside>
        <div class="row" style="justify-content: center;">
            <button class="btn btn-success" id="print" >Print</button>
        </div>
      </div>
    </div>
  </div>
</div>

<%-include('./inc/footer');%>
<script src="https://raw.githack.com/eKoopmans/html2pdf/master/dist/html2pdf.bundle.js"></script>
<script>
    document
      .getElementById("print")
      .addEventListener("click", function download() {
        const element = document.getElementById("bill");
        html2pdf()
          .from(element)
          .save();
      });
</script>
